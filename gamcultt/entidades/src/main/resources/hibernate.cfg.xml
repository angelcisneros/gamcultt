    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/gamcultt?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">root</property>
    <mapping class="mx.ipn.escom.entidades.Encargado"/>
