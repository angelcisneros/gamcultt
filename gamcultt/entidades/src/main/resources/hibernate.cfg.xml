    <mapping class="mx.ipn.escom.entidades.Taller"/>
    <mapping class="mx.ipn.escom.entidades.Clase"/>
    <mapping class="mx.ipn.escom.entidades.Casa"/>
    <mapping class="mx.ipn.escom.entidades.Propuesta"/>
    <mapping class="mx.ipn.escom.entidades.Profesor"/>
    <mapping class="mx.ipn.escom.entidades.GaleriaTaller"/>
    <mapping class="mx.ipn.escom.entidades.Sala"/>
    <mapping class="mx.ipn.escom.entidades.ClaseId"/>
    <mapping class="mx.ipn.escom.entidades.GaleriaEvento"/>
